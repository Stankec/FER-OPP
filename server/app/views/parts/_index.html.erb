<table class="table table-striped">
	<thead>
		<tr>
			<td>Naziv</td>
			<td>Količina</td>
			<td>Cijena</td>
			<td>Opcije</td>
		</tr>
	</thead>
	<tbody>	
		<% part.each do |u| %>
			<tr>
				<td>
					<%= link_to u.name, part_path(u) %>
				</td>
				<td>
					<%= u.quantity %>
				</td>
				<td>
					<%= u.price %>
				</td>
				<td>
					<% if currentUser != nil && currentUser.canEdit("Parts") %>
						<div style="float:left;">
							<%= link_to '<i class="fa fa-edit"></i> Izmjeni'.html_safe, 
							        	edit_part_path(u),
							        	:class => "btn btn-default" %>
						</div>
						<div style="float:left; margin-left:10px;">
							<%= link_to '<i class="fa fa-trash"></i> Izbriši'.html_safe, 
							        	part_path(u),
							        	:method => "delete",
							        	:confirm => "Jeste li sigurni da želite izbrisati ove dijelove?",
							        	:class => "btn btn-danger" %>
						</div>
					<% end %>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>