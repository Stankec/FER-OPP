<div class="form-group">
	<table class="table table-striped">
		<thead>
			<tr>
				<td style="width:10%">Ikona</td>
				<td>Ime</td>
				<td style="width:25%">Opcije</td>
			</tr>
		</thead>
		<tbody>	
			<% network.each do |u| %>
				<tr>
					<td><%= u.icon.html_safe %></td>
					<td>
						<%= link_to u.name, u.link %>
					</td>
					<td>
						<% if currentUser != nil && currentUser.canEdit("Networks") %>
							<div style="float:left;">
								<%= link_to '<i class="fa fa-edit"></i> Izmjeni'.html_safe, 
								        	edit_network_path(u),
								        	:class => "btn btn-default" %>
							</div>
							<div style="float:left; margin-left:10px;">
								<%= link_to '<i class="fa fa-trash"></i> Izbriši'.html_safe, 
								        	network_path(u),
								        	:method => "delete",
								        	:confirm => "Jeste li sigurni da želite izbrisati mrežu #{u.name}?",
								        	:class => "btn btn-danger" %>
							</div>
						<% end %>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>