<%= form_for role do |f| %>

	<div >
		<div >
			<div class="form-group">
				<label for="page_title">Ime</label>
				<%= f.text_field :name, 
					:placeholder => "Voditelj odjela", 
					:class => "form-control" %>
			</div>
		</div>
		<div >
			<table class="table table-striped">
				<thead>
					<tr>
						<td>Smije</td>
						<td>
							<!-- Users -->
							<center>
								<i class="fa fa-group fa-lg"></i>
								<p>Korisnici</p>
							</center>
						</td>
						<td>
							<!-- Roles -->
							<center>
								<i class="fa fa-suitcase fa-lg"></i>
								<p>Uloge</p>
							</center>
						</td>
						<td>
							<!-- Orders -->
							<center>
								<i class="fa fa-file-text-o fa-lg"></i> 
								<p>Radni Nalozi</p>
							</center>
						</td>
						<td>
							<!-- Clents -->
							<center>
								<i class="fa fa-female fa-lg"></i>
								<p>Klijenti</p>
							</center>
						</td>
						<td>
							<!-- Vehicles -->
							<center>
								<i class="fa fa-rocket fa-lg"></i>
								<p>Vozila</p>
							</center>
						</td>
						<td>
							<!-- Procedures -->
							<center>
								<i class="fa fa-wrench fa-lg"></i>
								<p>Postupci</p>
							</center>
						</td>
						<td>
							<!-- Parts -->
							<center>
								<i class="fa fa-gears fa-lg"></i>
								<p>Dijelovi</p>
							</center>
						</td>
						<td>
							<!-- Statements -->
							<center>
								<i class="fa fa-bar-chart-o fa-lg"></i> 
								<p>Obračuni</p>
							</center>
						</td>
						<td>
							<!-- Working Hours -->
							<center>
								<i class="fa fa-clock-o fa-lg"></i>
								<p>Radno Vrijeme</p>
							</center>
						</td>
						<td>
							<!-- Networks -->
							<center>
								<i class="fa fa-sitemap fa-lg"></i> 
								<p>Socijalne Mreže</p>
							</center>
						</td>
						<td>
							<!-- Pages -->
							<center>
								<i class="fa fa-file fa-lg"></i>
								<p>Stranice</p>
							</center>
						</td>
						<td>
							<!-- Categories -->
							<center>
								<i class="fa fa-tags fa-lg"></i>
								<p>Kategorije</p>
							</center>
						</td>
						<td>
							<!-- Settings -->
							<center>
								<i class="fa fa-gear fa-lg"></i> 
								<p>Postavke</p>
							</center>
								
						</td>
					</tr>
				</thead>
				<tbody>	
					<tr>
						<td>Vidjeti</td>
						<td>
							<!-- Users -->
							<center>
								<%= f.check_box :canViewUsers %>
							</center>
						</td>
						<td>
							<!-- Roles -->
