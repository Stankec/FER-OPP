<div class="container">

	<% if !defined?(remote); remote = false; end; %>
	
	<%= form_for category, remote: remote do |f| %>

		<div class="row">
				<div class="form-group">
					<label for="category_title">Title</label>
					<%= f.text_field :title, 
						:placeholder => "Title", 
						:class => "form-control" %>
				</div>
				<div class="form-group">
					<label for="category_icon">Icon</label>
					<%= f.text_field :icon, 
						:placeholder => "<i class=\"icon-compass\"></i>", 
						:class => "form-control" %>
				</div>
				<div class="form-group">
					<label for="category_icon">Parent Category</label>
					<div class="clearfix"></div>
					<select id="category_parent_id" name="category[parent_id]" class="form-control">
					  	<option value="">No Parent</option>
						<% Category.roots.each do |opt|%>
							<%= render :partial => "categoryItemMenu", :locals => {:item => opt, :original => category.parent } %>
						<% end %>
					</select>
				</div>
		</div>

	<% end %>
	
</div>
