$('.pages').append('<% @pages.each do |p| %><div><% if p.hasPreview == true %><%= j p.contentPreview.html_safe %><% else %><%= j p.content.html_safe %><% end %></div><% end %>');
<% if @pages.next_page %>
  	$('.pagination').replaceWith('<%= j will_paginate @pages,
				renderer: BootstrapPagination::Rails,
				previous_label: "<i class='icon-chevron-left'></i>".html_safe, 
				next_label: "<i class='icon-chevron-right'></i>".html_safe %>');
<% else %>
  	$('.pagination').remove();
<% end %>