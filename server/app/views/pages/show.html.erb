<% content_for :contextMenu do %>
	<% if currentUser != nil && currentUser.canEdit("Pages") %>
		<li class="dropdown">
			<a href="#" class="dropdown-toggle" data-toggle="dropdown">
		      	<i class="fa fa-bars fa fa-large"></i>
			</a>
		  	<ul class="dropdown-menu">
		      	<li>
		      		<%= link_to '<i class="fa fa-plus"></i> Dodaj Stranicu'.html_safe, 
								new_page_path, 
								"data-no-turbolink" => true %>
		      	</li>
				<li>
					<%= link_to '<i class="fa fa-edit"></i> Izmjeni Stranicu'.html_safe, 
						edit_page_path(@page), 
						"data-no-turbolink" => true %>
				</li>
				<li>
					<%= link_to '<i class="fa fa-trash"></i> Izbriši Stranicu'.html_safe, 
						page_path(@page), 
						:method => "delete",
						:confirm => "Jeste li sigurni da želite izbrisati stranicu \n\"#{@page.title}\"?",
						"data-no-turbolink" => false %>
				</li>
			</ul>
		</li>
	<% end %>
<% end %>
<%= @page.content.html_safe %>
