<% content_for :contextMenu do %>
	<li class="dropdown">
		<a href="#" class="dropdown-toggle" data-toggle="dropdown">
	      	<i class="icon-reorder icon-large"></i>
		</a>
	  	<ul class="dropdown-menu">
	      	<li>
	      		<%= link_to '<i class="icon-plus"></i> Dodaj Stranicu'.html_safe, 
							new_page_path, 
							"data-no-turbolink" => true %>
	      	</li>
			<li>
				<%= link_to '<i class="icon-edit"></i> Izmjeni Stranicu'.html_safe, 
					edit_page_path(@page), 
					"data-no-turbolink" => true %>
			</li>
			<li>
				<%= link_to '<i class="icon-trash"></i> Izbriši Stranicu'.html_safe, 
					page_path(@page), 
					:method => "delete",
					:confirm => "Jeste li sigurni da želite izbrisati stranicu \n\"#{@page.title}\"?",
					"data-no-turbolink" => false %>
			</li>
		</ul>
	</li>
<% end %>
<%= @page.content.html_safe %>
