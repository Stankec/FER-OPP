<% content_for :contextMenu do %>
	<li class="dropdown">
		<a href="#" class="dropdown-toggle" data-toggle="dropdown">
	      	<i class="icon-reorder icon-large"></i>
		</a>
	  	<ul class="dropdown-menu">
	      	<li>
	      		<%= link_to '<i class="icon-plus"></i> Dodaj Stranicu'.html_safe, new_page_path, "data-no-turbolink" => true %>
	      	</li>
	      	<li>
	      		<%= link_to '<i class="icon-eye-close"></i> Prikaži Sakrivene'.html_safe, pages_unpublished_path %>
	      	</li>
	      	<% if params[:showLink].to_i != 1 %>
				<li>
					<%= link_to '<i class="icon-eye-open"></i> Prikaži Poveznice'.html_safe, :showLink => 1 %>
				</li>
			<% else %>
				<li>
					<%= link_to '<i class="icon-eye-close"></i> Sakri Poveznice'.html_safe, :showLink => 0 %>
				</li>
			<% end %>
		</ul>
	</li>
<% end %>

<% if @page != nil && @page.count != 0 %>
	<div class="pages">
		<% @page.each do |p| %>
			<div <% if p.slug != nil && p.slug.length != 0 %> id="p_<%= p.slug %>" <% end %> class="pageItem">
				<% if p.slug != nil && p.slug.length != 0 %><a id="<%= p.slug %>"></a><% end %>
				<% if params[:showLink].to_i == 1 %>
					<div class="admin"><%= link_to '<i class="icon-eye-open"></i> Show'.html_safe, page_path(p) %></div>
				<% end %>
				<% if p.hasPreview == true && p.contentPreview != nil && p.contentPreview.length != 0 %>
					<%= p.contentPreview.html_safe %>
				<% else %>
					<%= p.content.html_safe %>
				<% end %>
			</div>
		<% end %>
	</div>
	<div class="container">
		<center>
			<%= will_paginate @page,
				renderer: BootstrapPagination::Rails,
				previous_label: "<i class='icon-chevron-left'></i>".html_safe, 
				next_label: "<i class='icon-chevron-right'></i>".html_safe %>
		</center>
	</div>
<% else %>
	<div class="content">
		<div class="col-md-6 col-md-offset-3">
			<center>
				<h1>Trenutaćno nemamo stranica.</h1>
				<p>Molimo Vas da dođete kasnije...</p>
			</center>		
		</div>
	</div>
<% end %>
