<% content_for :contextMenu do %>
<% end %>

<div class="container">

	<div class="row">
		<div class="col-md-12">
			<h1>Obračuni</h1>
		</div>
		<div class="col-md-12">
			<ul class="nav nav-tabs">
			  	<li <% if params[:type].to_i == 0 %>class="active"<% end %>>
			  		<%= link_to "Dnevni", :controller => "statements", :type => "0" %>
			  	</li>
			  	<li <% if params[:type].to_i == 1 %>class="active"<% end %>>
			  		<%= link_to "Mjesečni", :controller => "statements", :type => "1" %>
			  </li>
			  	<li <% if params[:type].to_i == 2 %>class="active"<% end %>>
			  		<%= link_to "Godišnji", :controller => "statements", :type => "2" %>
			  </li>
			</ul>
		</div>
	</div>

	<div class="row">
		<div class="col-md-12">
			<%= render :partial => "index", :locals => {:statement => @statement} %>
			<center>
				<%= will_paginate @statement,
					renderer: BootstrapPagination::Rails,
					previous_label: "<i class='fa fa-chevron-left'></i>".html_safe, 
					next_label: "<i class='fa fa-chevron-right'></i>".html_safe %>
			</center>
		</div>
	</div>

</div>