<fieldset>
	<div class="form-group clearfix">
		<% 
			options = ""
			Part.all.each do |p|
				sel = ""
				if params[:part_id] == p.id
					sel = "selected"
				end
				options += '<option value="'+p.id.to_s+'" '+sel+'>'+p.name+'</option>'
			end
		%>
		<%= f.select :part_id, options.html_safe, {}, {:class => "form-control", :style => "width:40%; float:left;"} %>
		<%= f.text_field :quantity, :placeholder => "Količina npr. 1, 2.4, 7.0 ...", :class => "form-control", :style => "width:40%; float:left; margin-left:5px; margin-right:5px;" %>
		<%= f.hidden_field :_destroy %>
		<%= link_to '<i class="fa fa-trash-o"></i> Ukloni'.html_safe, '#', :class => "remove_fields btn btn-danger" %>
	</div>
</fieldset>