<div class="content">
	<div class="col-md-2 col-md-offset-5">
		<div class="well">
			<%= form_tag sessions_path do %>
				<div class="form-group">
					<%= text_field_tag :loginUsername, params[:loginUsername], 
						:placeholder => "Username", :class => "form-control" %>
				</div>
				<div class="form-group">
	  	  			<%= password_field_tag :password, nil, :class => "form-control" %>
				</div>
				<div class="form-group">
	  	  			<%= check_box_tag :rememberMe, 1, params[:rememberMe] %> Remember me
				</div>
				<div class="form-group">
	  	  			<%= submit_tag 'Log in',  :class => "btn btn-primary btn-block" %>
				</div>
			<% end %>
		</div>
	</div>
</div>