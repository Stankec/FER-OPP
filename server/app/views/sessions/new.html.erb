<div class="col-md-2 col-md-offset-5">
	<div class="well">
		<%= form_tag sessions_path do %>
			<div class="form-group">
				<%= text_field_tag :loginUsername, params[:loginUsername], 
					:placeholder => "Korisnićko ime", :class => "form-control" %>
			</div>
			<div class="form-group">
  	  			<%= password_field_tag :password, nil, :class => "form-control" %>
			</div>
			<div class="form-group">
  	  			<%= check_box_tag :rememberMe, 1, params[:rememberMe] %> Zapamti me na ovom računalu
			</div>
			<div class="form-group">
  	  			<%= submit_tag 'Prijavi se',  :class => "btn btn-primary btn-block" %>
			</div>
		<% end %>
	</div>
</div>
