<table class="table table-striped">
	<thead>
		<tr>
			<td>ID</td>
			<td>Name</td>
			<td>Surname</td>
			<td style="width:25%">Options</td>
		</tr>
	</thead>
	<tbody>	
		<% user.each do |u| %>
			<tr>
				<td><%= u.id %></td>
				<td><%= u.nameFirst %></td>
				<td><%= u.nameLast %></td>
				<td>
					<div style="float:left;">
						<%= link_to '<i class="icon-edit"></i> Edit'.html_safe, 
						        	edit_user_path(u),
						        	:class => "btn btn-default" %>
					</div>
					<div style="float:left; margin-left:10px;">
						<%= link_to '<i class="icon-trash"></i> Delete'.html_safe, 
						        	user_path(u),
						        	:method => "delete",
						        	:confirm => "Are you sure you want to delete user #{u.nameFirst} #{u.nameLast}?",
						        	:class => "btn btn-danger" %>
					</div>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>